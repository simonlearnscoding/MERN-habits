{
  "compilerOptions": {
    "lib": ["es2023"], // Use "es2023" for Node.js 20
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
